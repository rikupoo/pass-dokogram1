<div class="chat-header">
 <div class="left-top">
    <div class = "chat-name">
      <%= @group.name%>
    </div>
  </div>
  <div class="right-top">
    <div class="chat-end">
      <#%= link_to "チャットを終了する", group_path(@group), method: :delete %>
    </div>
  </div>
</div>

  <div class="messages">
  <%@messages.each do |messages|%>
    <div class="message-content">
      <%= messages.content%>
    </div>
    <%end%>
  </div>

<%= form_with model: [@group, @message], html: {class: "form"}, local: true do |f| %>
  <div class="form-input">
    <%= f.text_area :content, class: 'form-message', placeholder: 'type a message' %>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>